/alertTypes:
  (javaOperationName): getAlertTypes
  type: { readOnlyCollectionPaged: { type: ReferenceCode, description: Get all Alert Types (with alert codes). } }
  is: [
    sortable: {fieldsList: "code, description"}
  ]

/caseNoteSources:
