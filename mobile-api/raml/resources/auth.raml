description: API Authentication
post:
  description: Login using Username and Password
  body:
    application/json:
      schema: authLogin
  responses:
    201:
      description: The login has been completed with success. The token object is returned including the status.
      body:
        application/json:
          schema: authToken
    401:
      description: Invalid username or password
      body:
        application/json:
          schema: httpStatus
          example: !include ../examples/output/401.sample.json

