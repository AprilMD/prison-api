description: Returns the list of locations viewable by the user
type: { get-collection: { collectionSchema: locations } }
is: [
  searchable,
  orderable: {fieldsList : "locationId, agencyId, locationType, and parentLocationId"},
  pageable
]

/{locationId}:
  description: Returns details about the specified location
  type: { get-item: { schema: location }}

/{locationId}/inmates:
  description: The collection of inmates present at the specified location.
  type: { get-collection: { collectionSchema: inmateSummaries } }
  is: [
    searchable,
    orderable: {fieldsList : "inmateId, bookingId, offenderId, firstName, lastName, alertCodes, agencyId, currentLocationId, or assignedLivingUnitId"},
    pageable
  ]
