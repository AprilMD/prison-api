{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Inmate Summary",
	"type": "object",
	"properties": {
		"inmateId": { "type:": "integer" },
		"bookingId": { "type": "string" },
		"offenderId":    { "type:": "string" },
		"firstName":    { "type:": "string" },
		"lastName":    { "type:": "string" },
		"alertsCodes": { "type": "array", "items": { "type": "string" } },
		"agencyId":    { "type:": "string" },
		"currentLocationId": { "type:": "integer" },
		"assignedLivingUnitId": { "type:": "integer" }
	},
	"required": ["inmateId", "bookingId", "offenderId", "firstName", "lastName", "agencyId", "currentLocationId"]
}

