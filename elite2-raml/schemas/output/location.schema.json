{
	"$schema": "http://json-schema.org/draft-04/schema",
	"type": "object",
	"title": "Location",
	"properties": {
		"locationId":   { "type": "integer" },
		"agencyId":   { "type": "string" },
		"locationType":   { "type": "string" },
		"description": { "type": "string" },
		"parentLocationId":   { "type": "integer" },
		"operationalCapacity":  { "type": "integer" },
		"currentOccupancy": { "type": "integer" },
		"livingUnit": { "type": "boolean" },
		"housingUnitType": { "type": "string" },
		"assignedInmates": {
			"type": "array",
			"items": { "$ref": "inmateSummary" }
		},
		"activeCountStatusCode": { "enum": ["I", "R", "C"] },
		"activeCountId": { "type": "integer" }
	},
	"required": ["locationId", "agencyId", "locationType", "description", "parentLocationId", "currentOccupancy", "livingUnit"]
}
