{
	"$schema": "http://json-schema.org/draft-04/schema",
	"type": "object",
	"title": "Location",
	"properties": {
		"locationId":   { "type:": "string" },
		"agencyId":   { "type:": "string" },
		"locationType":   { "type:": "string" },
		"description": { "type:": "string" },
		"parentLocationId":   { "type:": "string" },
		"operationalCapacity":  { "type:": "number" },
		"currentOccupancy": { "type:": "number" },
		"livingUnit": { "type:": "boolean" },
		"housingUnitType": { "type:": "string" },
		"assignedInmates": {
			"type:": "array",
			"items": { "$ref": "inmate" }
		}
	},
	"required": ["locationId", "agencyId", "locationType", "description", "parentLocationId", "currentOccupancy", "livingUnit"]
}

