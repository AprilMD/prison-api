{
  "$schema": "http://json-schema.org/draft-03/schema",

  "title": "Location",
  "type": "object",
  "properties": {
    "locationId": { "type:": "integer" },
    "agencyId": { "type:": "integer" },
    "locationType": { "type:": "string" },
    "description": { "type:": "string" },
    "parentLocationId": { "type:": "integer" },
    "operationalCapacity": { "type:": "integer" },
    "currentOccupancy": { "type:": "integer" },
    "livingUnit":   {
      "type:": "boolean",
      "required": true
    },
    "housingUnitType":   {
      "type:": "string",
      "required": false
    },
  }
}
