{
  "$schema": "http://json-schema.org/draft-03/schema",

  "title": "Movement Set",
  "type": "array",
  "items": {
    "title": "Movement",
    "type": "object",
    "properties": {
      "moveCategory": {
        "enum:": [ "external", "internal" ],
        "required": true
      },
      "inmateId":  {
        "type:": "number",
        "required": true
      },
      "inmateId":  {
        "type:": "datetime",
        "required": true
      },
      "fromAgencyId":   {
        "type:": "string",
        "required": false
      },
      "toAgencyId":   {
        "type:": "string",
        "required": false
      },
      "moveType":   {
        "type:": "string",
        "required": false
      },
      "moveReason":   {
        "type:": "string",
        "required": false
      },
      "fromLocationId":    {
        "type:": "string",
        "required": false
      },
      "toLocationId":    {
        "type:": "string",
        "required": false
      }
    }
  }
}
